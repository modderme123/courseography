{
  "env": {
    "browser": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2022
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "globals": {
    "$": "readonly",
    "getURLParameter": "readonly"
  },
  "overrides": [
    {
      "files": ["*.js"],
      "env": {
        "jest": true,
        "node": true,
        "es6": true
      }
    }
  ],
  "rules": {
    "no-console": "off",
    "react/no-find-dom-node": "off",
    "react/no-render-return-value": "off",
    "react/no-string-refs": "off"
  },
  "settings": {
    "react": {
      "version": "16"
    }
  }
}
